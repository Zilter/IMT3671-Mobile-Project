package com.project.gemswapper;

import android.graphics.Bitmap;
import android.graphics.Canvas;
import android.graphics.Rect;

public class Tile {
	byte mType;
	Bitmap mSprite;
	
	private int xPos;
	private int yPos;
	private int spriteHeight;
	private int spriteWidth;
	
	private Rect mRect;
	
	public enum TileType {CIRCLE, TRIANGLE, SQUARE, DIAMOND, STAR };
	
	
	public Tile()
	{
		mRect = new Rect(0, 0, 0, 0);
		xPos = 0;
		yPos = 0;
		spriteHeight = 0;
		spriteWidth = 0;
		mType = 0;
		mSprite = null;
	}
	
	public Tile(byte type)		// 5 types..
	{
		switch(type)
		{
			case TileType.CIRCLE:
				break;
			
			case 1:
				break;
			
			case 2:
				break;
				
			case 3:
				break;
				
			case 4:
				break;
				
			case 5:
				break;
		}
	}
	
	public int getXPos()
	{
		return xPos;
	}
	
	public int getYPos()
	{
		return yPos;
	}
	
	public void draw(Canvas canvas)
	{
		Rect dest = new Rect(getXPos(), getYPos(), getXPos() + spriteWidth, getYPos() + spriteHeight);
		
		canvas.drawBitmap(mSprite, mRect, dest, null);
	}
}
